<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RegisterActivity">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/MaterialEditText_register_phone"
        app:met_floatingLabel="highlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="手机号"
        app:met_helperText="输入相关提示信息"
        app:met_clearButton="true"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/MaterialEditText_register_id"
        app:met_floatingLabel="highlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/MaterialEditText_register_phone"
        android:hint="用户名"
        app:met_helperText="输入用户名要求"
        app:met_clearButton="true"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/MaterialEditText_register_password"
        app:met_floatingLabel="highlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_minCharacters="8"
        android:layout_below="@id/MaterialEditText_register_id"
        android:hint="密码"
        app:met_helperText="输入密码要求"
        app:met_clearButton="true"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/MaterialEditText_register_ensurepw"
        app:met_floatingLabel="highlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_minCharacters="8"
        android:layout_below="@id/MaterialEditText_register_password"
        android:hint="确认密码"
        app:met_clearButton="true"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/MaterialEditText_register_identify"
        app:met_floatingLabel="highlight"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/MaterialEditText_register_ensurepw"
        android:hint="验证码"
        app:met_clearButton="true"
        />


    <com.dd.CircularProgressButton
        android:id="@+id/CircularProgressButton_register_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/MaterialEditText_register_identify"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cpb_textComplete="Complete"
        app:cpb_textError="Error"
        app:cpb_textIdle="注册"
        app:cpb_selectorIdle="@drawable/selector" />
    <com.dd.CircularProgressButton
        android:id="@+id/CircularProgressButton_register_chgidentify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@id/CircularProgressButton_register_register"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cpb_textComplete="Complete"
        app:cpb_textError="Error"
        app:cpb_textIdle="发送验证码"
        app:cpb_selectorIdle="@drawable/selector" />
</RelativeLayout>
