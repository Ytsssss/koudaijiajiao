<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LogAcitivity">
    <TextView
        android:id="@+id/textview_log_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="（待定）"
        android:textSize="50dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/MaterialEditText_log_id"
        app:met_floatingLabel="highlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="账号"
        android:layout_marginTop="150dp"
        app:met_clearButton="true"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/MaterialEditText_log_password"
        app:met_floatingLabel="highlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/MaterialEditText_log_id"
        android:hint="密码"
        app:met_clearButton="true"
        />
    <com.dd.CircularProgressButton
        android:id="@+id/CircularProgressButton_log_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/MaterialEditText_log_password"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cpb_textComplete="Complete"
        app:cpb_textError="Error"
        app:cpb_textIdle="登陆"
        app:cpb_selectorIdle="@drawable/selector" />
    <TextView
        android:id="@+id/textview_log_findpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/CircularProgressButton_log_log"
        android:text="找回密码"
        />
    <TextView
        android:id="@+id/textview_log_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/CircularProgressButton_log_log"
        android:layout_alignParentRight="true"
        android:text="注册账号"
        />
</RelativeLayout>

